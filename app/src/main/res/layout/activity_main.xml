<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vertical"
    xmlns:tools="http://schemas.android.com/tools">

<ListView
    android:id="@+id/list_view"
    android:drawSelectorOnTop="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/default_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:textSize="@dimen/text_large"
            android:paddingStart="@dimen/space_huge"
            android:paddingEnd="@dimen/space_huge"
            android:textStyle="bold"
            android:gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/default_view_text"
            android:layout_weight="1"/>

        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_view_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

    </LinearLayout>

</RelativeLayout>